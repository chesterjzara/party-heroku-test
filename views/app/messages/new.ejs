<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/head.ejs %>
  </head>
    <body>
      <div class="container">
        <h1>New Message</h1>
        <div class="row">
          <form class="col s12" action="/app/messages" method="POST">
            <div class="row">
              <div class="input-field col s6">
                <input placeholder="Message Text" id="messageText" type="text" class="validate" name="messageText" required>
                <label for="messageText">Message: </label>
              </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </form>
        </div>
    </body>
</html>